
@{
    ViewData["Title"] = "SanPhamTheoQuocGia";
    Layout = "~/Views/Shared/_OganyLayout.cshtml";
}

@model X.PagedList.IPagedList<TQuocGium>
@using X.PagedList.Mvc.Core;

@foreach (var item in Model)
{
	<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
		<div class="featured__item">
			<div class="featured__item__pic set-bg"  style="background-image: url(&quot;GlobalAssets/img/categories/cat-1.jpg&quot;);">
				<ul class="featured__item__pic__hover">
					<li><a href="#"><i class="fa fa-heart"></i></a></li>
					<li><a href="#"><i class="fa fa-retweet"></i></a></li>
					<li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
				</ul>
			</div>
			<div class="featured__item__text">
				<h6><a href="#">@item.TenNuoc</a></h6>
				<h5>@item.MaNuoc</h5>
			</div>
		</div>
	</div>
}
<div class="product__pagination">
	@Html.PagedListPager(Model, page => Url.Action("SanPhamTheoQuocGia", new {page = page, manuoc = ViewBag.manuoc}))
</div>

